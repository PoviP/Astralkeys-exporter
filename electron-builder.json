{
  "appId": "com.astralkeys.monitor",
  "productName": "Astral Keys Monitor",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "assets/**/*",
    "config.example.json",
    "README.md",
    "package.json",
    "node_modules/**/*"
  ],
  "win": {
    "target": "portable",
    "icon": "assets/icon.ico"
  },
  "portable": {
    "artifactName": "AstralKeysMonitor.exe"
  },
  "asar": true,
  "asarUnpack": [
    "node_modules/chokidar/**/*",
    "node_modules/fsevents/**/*",
    "node_modules/mongodb/**/*"
  ]
}
