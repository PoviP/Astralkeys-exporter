{
  "name": "astral-keys-monitor",
  "version": "3.0.0",
  "description": "Astral Keys Monitor - WoW Keystone Tracking",
  "author": "Astral Keys Monitor",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --publish=never",
    "build-portable": "electron-builder --win --x64 --publish=never --config electron-builder.json"
  },
  "build": {
    "appId": "com.astralkeys.monitor",
    "productName": "Astral Keys Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "config.json",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "conf": "^12.0.0",
    "mongodb": "^6.3.0"
  }
}
